@model MovieStoreNew.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>

    <li>Membership Name: @Model.MembershipType.Name</li>
@if(Model.BirthDate.HasValue)
{
    <li>BirthDate: @Model.BirthDate.Value.ToString("MM/dd/yyyy")</li>
}
</ul>
